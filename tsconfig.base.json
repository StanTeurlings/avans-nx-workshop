{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@avans-nx-workshop/backend/auth": [
                "libs/backend/auth/src/index.ts"
            ],
            "@avans-nx-workshop/backend/dto": ["libs/backend/dto/src/index.ts"],
            "@avans-nx-workshop/backend/features": [
                "libs/backend/features/src/index.ts"
            ],
            "@avans-nx-workshop/backend/user": [
                "libs/backend/user/src/index.ts"
            ],
            "@avans-nx-workshop/common": ["libs/frontend/common/src/index.ts"],
            "@avans-nx-workshop/features": [
                "libs/frontend/features/src/index.ts"
            ],
            "@avans-nx-workshop/frontend/auth": [
                "libs/frontend/auth/src/index.ts"
            ],
            "@avans-nx-workshop/frontend/common": [
                "libs/frontend/common/src/index.ts"
            ],
            "@avans-nx-workshop/frontend/features": [
                "libs/frontend/features/src/index.ts"
            ],
            "@avans-nx-workshop/frontend/ui": [
                "libs/frontend/ui/src/index.ts"
            ],
            "@avans-nx-workshop/frontend/user": [
                "libs/frontend/user/src/index.ts"
            ],
            "@avans-nx-workshop/shared/api": ["libs/shared/api/src/index.ts"],
            "@avans-nx-workshop/shared/util-env": [
                "libs/shared/util-env/src/index.ts"
            ],
            "@avans-nx-workshop/ui": ["libs/frontend/ui/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
